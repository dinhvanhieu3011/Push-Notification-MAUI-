<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushNoti.Views.DetailPage"
             xmlns:models="clr-namespace:PushNoti.Models"
             x:DataType="models:PushNotification"
             Title="DetailPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
            <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="Black"/>
            <Label Text="{Binding CreatedDate}" FontAttributes="Italic" TextColor="Black"/>
            <Label Text="{Binding Body}" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>